<Window x:Name="ChatMainWindow" x:Class="WindowedChat.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Windowed Chat" Height="371" Width="590" FontFamily="Times New Roman" HorizontalAlignment="Left">
    <Grid x:Name="ChatGrid">
        <ListView x:Name="FriendList" Margin="10,10,0,37" HorizontalAlignment="Left" Width="180" Background="#FFD9F5FF">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <TextBox x:Name="MessangeTextBox" Margin="200,291,120,10" TextWrapping="Wrap" Background="#FFEFFFF0"/>
        <Button x:Name="MessangeSendButton" Content="Send Messang" Margin="492,291,10,15">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF21B6A8" Offset="0.557"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <TextBlock x:Name="ChatTextBlock" Margin="200,10,10,75" TextWrapping="Wrap" Padding="0" Background="#FFEEEEEE"/>

    </Grid>
</Window>
