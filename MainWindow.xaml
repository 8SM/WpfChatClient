<Window x:Name="ChatLoginWindow" x:Class="WindowedChat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WindowedChat" Height="200" Width="350" Foreground="Black" Background="#FFD4D4D4" FontFamily="Mangal" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid x:Name="LoginGrid">
        <Label x:Name="LoginLabel" Content="Login please" Margin="107,15,107,0" VerticalAlignment="Top" FontFamily="Tele-Marines"/>
        <TextBox x:Name="LoginTextBox" Height="25" Margin="107,60,107,0" TextWrapping="Wrap" VerticalAlignment="Top" ToolTip="Enter your NickName"/>
        <Button x:Name="LoginButton" Content="Login" Margin="107,120,107,0" VerticalAlignment="Top" Click="LoginButton_Click"/>
        <Label x:Name="LoginInfoLabel" Content="" Margin="10,90,10,0" Height="27" VerticalAlignment="Top" Padding="0" VerticalContentAlignment="Center" FontSize="8"/>

    </Grid>
</Window>


